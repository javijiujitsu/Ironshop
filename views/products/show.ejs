
<h1><%= product.name %></h1>
<img src="<%= product.imageUrl %>">
<h3>Price: <span>$<%= product.price %></span></h3>
<p><%= product.description %></p>

<hr>
<h2>Reviews</h2>
<ul>
  <% product.reviews.forEach((review) => { %>
    <li>
      <p><%= review.content %></p>
      <strong><%= review.author %></strong>
    </li>
  <%  }); %>
</ul>
